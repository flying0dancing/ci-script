<?xml version="1.0" encoding="UTF-8"?>

<configuration>
  <include resource="org/springframework/boot/logging/logback/base.xml" />

  <logger name="com.lombardrisk.ignis" level="TRACE" />

  <logger name="org.hibernate" level="INFO" />
  <logger name="org.hibernate.type.BasicTypeRegistry" level="WARN" />

  <logger name="org.springframework.security.web.DefaultSecurityFilterChain" level="WARN" />
  <logger name="org.springframework.beans.factory.support.DefaultListableBeanFactory" level="WARN" />
  <logger name="org.springframework.context.support.PostProcessorRegistrationDelegate$BeanPostProcessorChecker"
          level="WARN" />
  <logger name="org.springframework.boot.autoconfigure.thymeleaf" level="error" />

  <logger name="com.lombardrisk.ignis" level="INFO" />

  <!--Log SQL Statements-->
