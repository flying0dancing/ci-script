<?xml version="1.0" encoding="UTF-8"?>

<configuration>
  <include resource="org/springframework/boot/logging/logback/base.xml" />

  <logger name="org.hibernate" level="INFO" />
  <logger name="org.hibernate.type.BasicTypeRegistry" level="WARN" />

  <logger name="org.springframework.security.web.DefaultSecurityFilterChain" level="WARN" />
  <logger name="org.springframework.beans.factory.support.DefaultListableBeanFactory" level="WARN" />
  <logger name="org.springframework.context.support.PostProcessorRegistrationDelegate$BeanPostProcessorChecker"
          level="WARN" />

  <logger name="org.apache.hadoop.util.Shell" level="OFF" />
  <logger name="org.apache.hadoop.yarn.client.RMProxy" level="WARN" />
  <logger name="org.apache.spark.deploy.yarn.Client" level="WARN" />
  <logger name="org.apache.spark.SecurityManager" level="WARN" />


  <logger name="com.lombardrisk.ignis" level="DEBUG" />

  <root level="INFO">
    <appender-ref ref="CONSOLE" />
  </root>
</configuration>