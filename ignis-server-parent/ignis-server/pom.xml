          <!--create/drop database schema-->
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>sql-maven-plugin</artifactId>
            <version>1.5</version>
            <dependencies>
              <dependency>
                <groupId>com.oracle</groupId>
                <artifactId>ojdbc8</artifactId>
                <version>${oracle.jdbc.version}</version>
              </dependency>
              <dependency>
                <groupId>com.microsoft.sqlserver</groupId>
                <artifactId>mssql-jdbc</artifactId>
                <version>${mssqlserver.jdbc.version}</version>
              </dependency>
              <dependency>
                <groupId>mysql</groupId>
                <artifactId>mysql-connector-java</artifactId>
                <version>${mysql.version}</version>
              </dependency>
            </dependencies>
            <executions>
              <!--oracle-->
              <execution>
                <id>create-oracle-database</id>
                <phase>pre-integration-test</phase>
                <goals>
                  <goal>execute</goal>
                </goals>
                <configuration>
                  <url>${oracle.jdbc.url}</url>
                  <driver>oracle.jdbc.driver.OracleDriver</driver>
                  <sqlCommand>
                    CREATE USER ${database.schema.name} IDENTIFIED BY password
                      DEFAULT TABLESPACE users
                      TEMPORARY TABLESPACE temp
                      QUOTA UNLIMITED ON users;

                    GRANT CREATE SESSION TO ${database.schema.name};
                    GRANT CREATE TABLE TO ${database.schema.name};
                    GRANT CREATE SEQUENCE TO ${database.schema.name};
                    GRANT CREATE VIEW TO ${database.schema.name};
                    GRANT CREATE TRIGGER to ${database.schema.name};
                    GRANT CREATE PROCEDURE TO ${database.schema.name};
                    GRANT SELECT ON SYS.pending_trans$ TO ${database.schema.name};
                    GRANT SELECT ON SYS.dba_2pc_pending TO ${database.schema.name};
                    GRANT SELECT ON SYS.dba_pending_transactions TO ${database.schema.name};
                  </sqlCommand>
                </configuration>
              </execution>
              <execution>
                <id>drop-oracle-database</id>
                <phase>post-integration-test</phase>
                <goals>
                  <goal>execute</goal>
                </goals>
                <configuration>
                  <url>${oracle.jdbc.url}</url>
                  <driver>oracle.jdbc.driver.OracleDriver</driver>
                  <sqlCommand>
                    DROP USER ${database.schema.name} CASCADE;
                  </sqlCommand>
                </configuration>
              </execution>

              <!--mssqlserver-->
              <execution>
                <id>create-mssqlserver-database</id>
                <phase>pre-integration-test</phase>
                <goals>
                  <goal>execute</goal>
                </goals>
                <configuration>
                  <url>${mssqlserver.jdbc.url}</url>
                  <driver>com.microsoft.sqlserver.jdbc.SQLServerDriver</driver>
                  <sqlCommand>
                    CREATE DATABASE [${database.schema.name}];
                    CREATE LOGIN [${database.schema.name}] WITH PASSWORD ='password', DEFAULT_DATABASE = [${database.schema.name}], CHECK_EXPIRATION = OFF, CHECK_POLICY = OFF;
                    USE [${database.schema.name}];
                    CREATE USER [${database.schema.name}] FOR LOGIN [${database.schema.name}] WITH DEFAULT_SCHEMA = [dbo];
                    EXEC sp_addrolemember 'db_datareader', [${database.schema.name}];
                    EXEC sp_addrolemember 'db_datawriter', [${database.schema.name}];
                    EXEC sp_addrolemember 'db_accessadmin', [${database.schema.name}];
                    EXEC sp_addrolemember 'db_ddladmin', [${database.schema.name}];
                    EXEC sp_addrolemember 'db_owner', [${database.schema.name}];
                  </sqlCommand>
                </configuration>
              </execution>
              <execution>
                <id>drop-mssqlserver-database</id>
                <phase>post-integration-test</phase>
                <goals>
                  <goal>execute</goal>
                </goals>
                <configuration>
                  <url>${mssqlserver.jdbc.url}</url>
                  <driver>com.microsoft.sqlserver.jdbc.SQLServerDriver</driver>
                  <autocommit>true</autocommit>
                  <sqlCommand>
                    DROP LOGIN [${database.schema.name}];
                    DROP DATABASE [${database.schema.name}];
                  </sqlCommand>
                </configuration>
              </execution>

              <!--mysql-->
              <execution>
                <id>create-mysql-database</id>
                <phase>pre-integration-test</phase>
                <goals>
                  <goal>execute</goal>
                </goals>
                <configuration>
                  <url>${mysql.jdbc.url}</url>
                  <driver>com.mysql.jdbc.Driver</driver>
                  <sqlCommand>
                    CREATE DATABASE ${database.schema.name};
                    CREATE USER ${database.schema.name} IDENTIFIED BY 'password';
                    GRANT ALL ON ${database.schema.name}.* TO ${database.schema.name};
                  </sqlCommand>
                </configuration>
              </execution>
              <execution>
                <id>drop-mysql-database</id>
                <phase>post-integration-test</phase>
                <goals>
                  <goal>execute</goal>
                </goals>
                <configuration>
                  <url>${mysql.jdbc.url}</url>
                  <driver>com.mysql.jdbc.Driver</driver>
                  <sqlCommand>
                    DROP USER ${database.schema.name};
                    DROP DATABASE ${database.schema.name};
                  </sqlCommand>
                </configuration>
              </execution>
            </executions>
          </plugin>

          <!--run integration tests-->
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
