<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>dist</id>

  <fileSets>
    <fileSet>
      <directory>src/assembly/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <fileMode>0700</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/assembly</directory>
      <outputDirectory>/</outputDirectory>
      <excludes>
        <exclude>**/*.sh</exclude>
        <exclude>**/*.cmd</exclude>
        <exclude>**/*.conf</exclude>
        <exclude>**/*.gitKeep</exclude>
        <exclude>assembly.xml</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${staging.db.scripts.path}</directory>
      <outputDirectory>lib/${flyway.dir}/sql</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${staging.path}</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>*exec.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${staging.flyway.path}</directory>
      <outputDirectory>lib/${flyway.dir}</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${staging.ui.dist.path}</directory>
      <outputDirectory>ui</outputDirectory>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet>
      <outputDirectory>lib/${flyway.dir}/drivers</outputDirectory>
      <includes>
        <include>com.oracle:ojdbc8</include>
        <include>com.h2database:h2</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>